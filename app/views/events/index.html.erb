<div class='row'>
  <div class='span12'>
    <div class='well'>
      <h1>Upcoming Concerts</h1>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Location</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td><%= format_date(event.event_date) %></td>
              <td><%= format_time(event.event_date) %></td>
              <td><%= event.location %></td>
              <td><%= link_to 'More Info', event, :class => 'btn btn-mini'%></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br />

      <%= link_to 'New Event', new_event_path %>
    </div>
  </div>
</div>
